    "401": "Unauthorized",
    "403": "Forbidden",
    "404": "Not Found",
    "422": "Validation Error",
    "500": "Server Error"
  },
  "enums": {
    "user_status": ["pending", "active", "suspended", "inactive"],
    "acc_status": ["pending", "active", "suspended", "expired"],
    "authorization_status": ["pending", "approved", "rejected", "returned"],
    "certificate_status": ["valid", "revoked", "expired"],
    "code_status": ["available", "used", "expired", "revoked"],
    "transaction_status": ["pending", "completed", "failed", "refunded"],
    "class_status": ["scheduled", "in_progress", "completed", "cancelled"],
    "roles": ["group_admin", "acc_admin", "training_center_admin", "instructor"],
