{
  "base_url": "http://your-domain.com/api",
  "authentication": {
    "type": "Bearer Token",
    "header": "Authorization: Bearer {token}",
    "note": "Token received from login/register endpoints"
  },
  "endpoints": {
    "public": {
      "auth": {
        "register": {
          "method": "POST",
          "path": "/auth/register",
          "description": "Register a new user",
          "body": {
            "name": "string (required)",
            "email": "string (required, unique)",
            "password": "string (required, min:8)",
            "password_confirmation": "string (required)",
            "role": "string (required, enum: training_center_admin, acc_admin)"
          }
        },
        "login": {
          "method": "POST",
          "path": "/auth/login",
          "description": "Login with email and password",
          "body": {
            "email": "string (required)",
            "password": "string (required)"
          }
        },
        "forgot_password": {
          "method": "POST",
          "path": "/auth/forgot-password",
          "description": "Request password reset link",
          "body": {
            "email": "string (required)"
          }
        },
        "reset_password": {
          "method": "POST",
          "path": "/auth/reset-password",
          "description": "Reset password with token",
          "body": {
            "token": "string (required)",
            "email": "string (required)",
            "password": "string (required)",
            "password_confirmation": "string (required)"
          }
        },
        "verify_email": {
          "method": "GET",
          "path": "/auth/verify-email/{token}",
          "description": "Verify user email address"
        }
      },
      "certificates": {
        "verify": {
          "method": "GET",
          "path": "/certificates/verify/{code}",
          "description": "Verify a certificate (public, no auth required)",
          "params": {
            "code": "string (required) - Verification code"
          }
        }
      }
    },
    "protected": {
      "auth": {
        "logout": {
          "method": "POST",
          "path": "/auth/logout",
          "auth_required": true
        },
        "profile": {
          "method": "GET",
          "path": "/auth/profile",
          "auth_required": true
        },
        "update_profile": {
          "method": "PUT",
          "path": "/auth/profile",
          "auth_required": true,
          "body": {
            "name": "string (optional)",
            "email": "string (optional, unique)"
          }
        },
        "change_password": {
          "method": "PUT",
          "path": "/auth/change-password",
          "auth_required": true,
          "body": {
            "current_password": "string (required)",
            "password": "string (required, min:8)",
            "password_confirmation": "string (required)"
          }
        }
      },
